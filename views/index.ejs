<%- include("partials/header") %>

<div class="ui container text main">
  <div class="ui huge header">Blog Site!!!</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(blog => { %>
      <div class="item">
        <div class="ui image rounded">
          <img src="<%= blog.image %> " alt="">
        </div>
        <div class="content">
          <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title %></a>
          <div class="meta">
            <span><%= blog.created.toDateString() %> </span>
          </div>
          <div class="description">
            <p><%= blog.body.substring(0, 100) %>... </p>
          </div>
          <div class="extra">
            <div class="ui divider"></div>
            <a class="ui right floated inverted orange button" href="/blogs/<%= blog._id%>">Read More
              <i class="right chevron icon"></i>
            </a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
  <%- include("partials/footer") %>
</div>