<%- include("partials/header") %>

<div class="ui container main text">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attached segment">
    <div class="item">
      <img class="ui centered rounded image" src=" <%= blog.image %> " alt="" />
      <div class="content">
        <span><%= blog.created.toDateString() %> </span>
      </div>
      <div class="description">
        <p><%- blog.body %></p>
      </div>
      <div class="ui divider"></div>
      <div>
        <a class="ui inverted orange button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form id="deleteBtn" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
          <button class="ui inverted red button">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>