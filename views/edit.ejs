<%- include("partials/header") %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%=blog.title%></div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
    <div class="field">
      <label>Title</label>
      <input required type="text" name="blog[title]" value="<%= blog.title %>" id="" />
    </div>
    <div class="field">
      <label>Image URL</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" id="" />
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea required name="blog[body]"><%= blog.body %></textarea>
    </div>
    <div class="field">
      <input class="ui inverted orange button" type="submit" value="Submit" />
    </div>
  </form>
</div>

<%- include("partials/footer") %>